{
  "_comment": "CoolerDash Plugin Configuration - All values with defaults",

  "daemon": {
    "address": "http://localhost:11987",
    "password": ""
  },

  "paths": {
    "images": "/etc/coolercontrol/plugins/coolerdash",
    "image_coolerdash": "/etc/coolercontrol/plugins/coolerdash/coolerdash.png",
    "image_shutdown": "/etc/coolercontrol/plugins/coolerdash/shutdown.png",
    "pid": "/tmp/coolerdash.pid"
  },

  "display": {
    "mode": "dual",
    "circle_switch_interval": 5,
    "refresh_interval": 2.5,
    "brightness": 80,
    "orientation": 0,
    "width": 240,
    "height": 240,
    "shape": "auto",
    "content_scale_factor": 0.98,
    "inscribe_factor": 0.70710678
  },

  "layout": {
    "bar_height": 24,
    "bar_width": 98,
    "bar_gap": 12,
    "bar_border": 2.0,
    "label_margin_left": 1,
    "label_margin_bar": 1
  },

  "colors": {
    "bar_background": { "r": 52, "g": 52, "b": 52 },
    "bar_border": { "r": 192, "g": 192, "b": 192 },
    "font_temp": { "r": 255, "g": 255, "b": 255 },
    "font_label": { "r": 200, "g": 200, "b": 200 }
  },

  "font": {
    "face": "Roboto Black",
    "size_temp": 100.0,
    "size_labels": 30.0
  },

  "temperature": {
    "threshold_1": 55.0,
    "threshold_2": 65.0,
    "threshold_3": 75.0,
    "max_scale": 115.0,
    "threshold_1_color": { "r": 0, "g": 255, "b": 0 },
    "threshold_2_color": { "r": 255, "g": 140, "b": 0 },
    "threshold_3_color": { "r": 255, "g": 70, "b": 0 },
    "threshold_4_color": { "r": 255, "g": 0, "b": 0 }
  },

  "liquid": {
    "max_scale": 50.0,
    "threshold_1": 25.0,
    "threshold_2": 28.0,
    "threshold_3": 31.0,
    "threshold_1_color": { "r": 0, "g": 255, "b": 0 },
    "threshold_2_color": { "r": 255, "g": 140, "b": 0 },
    "threshold_3_color": { "r": 255, "g": 70, "b": 0 },
    "threshold_4_color": { "r": 255, "g": 0, "b": 0 }
  },

  "positioning": {
    "temp_offset_x_cpu": -9999,
    "temp_offset_x_gpu": -9999,
    "temp_offset_y_cpu": -9999,
    "temp_offset_y_gpu": -9999,
    "temp_offset_x_liquid": -9999,
    "temp_offset_y_liquid": -9999,
    "degree_spacing": 16,
    "label_offset_x": -9999,
    "label_offset_y": -9999
  }
}
