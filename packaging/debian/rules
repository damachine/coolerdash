#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_build:
	$(MAKE) SUDO="" REALOS=no

override_dh_auto_install:
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp SUDO="" REALOS=no

override_dh_auto_clean:
	$(MAKE) clean || true

override_dh_installdocs:
	dh_installdocs

override_dh_installman:
	dh_installman

override_dh_installsystemd:
	# CoolerControl manages the plugin lifecycle, no standalone service needed
	:
